@model Elmah.ErrorDetailModel

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1 id="PageTitle">@Model.Title</h1>
@Html.Raw(Elmah.SpeedBar.Render(
                Elmah.SpeedBar.Home.Format(Model.BasePageName),
                Elmah.SpeedBar.Help,
                Elmah.SpeedBar.About.Format(Model.BasePageName)))
<p id="ErrorTitle">
    <span id="ErrorType">
        @Model.Type
    </span>
    <span id="ErrorTypeMessageSeparator">: </span>
    <span id="ErrorMessage">@Model.Message</span>
</p>
@if(!string.IsNullOrEmpty(Model.Detail)){
<pre id="ErrorDetail">@Model.Detail</pre>
}
<p id="ErrorLogTime">@string.Format("Logged on {0} at {1}",
                Model.Time.ToLongDateString(),
                Model.Time.ToLongTimeString())</p>
@Html.Raw(Model.Render(Html))